<li class="list-card">

  <figure class="pos-relative of-hidden cont-card-img flex al-items">
    <img class="card-img pos-absolute w-100" src="<%= cabana.images[0].image%> " alt="foto de cabaña" />

    <div class="icons-beds jc-end al-items flex pos-absolute w-100">
      <%= cabana.guest %> x <i class="fa-solid fa-user icon-bed"></i>
    </div>
  </figure>

  <h2 class="txt-center"><%= cabana.name %></h2>
  <div class="info-card">
    <p class="p-top-10 txt-center cottage-description">
      <%= cabana.description %>
    </p>

    <div class="txt-center">
      <a href="/products/cottages/details/<%= cabana.id%>" class="more-button txt-center bg-3">Más imágenes</a>
    </div>
    <br />
    <div class="flex flex-wrap p-10px">
      <div class="price-res flex w-100 jc-bet al-items">
        <h3>precio por noche: $<%= cabana.price %></h3>
        <a href="/products/cottages/booking/<%= cabana.id  %> " class="cottage-button txt-center bg-3">reservar</a>
      </div>
    </div>
    <% if (userLog?.rol.name == "admin") { %>
    <div class="section-admin-buttons flex jc-evenly m-top-10">
      <a class="admin-button w-100 txt-center edit-button" href="/products/cottages/edit/<%= cabana.id %>"><i class="fa-solid fa-pen-to-square"></i></a>
      <a class="admin-button w-100 txt-center delete-button" href="/products/cottages/delete/<%= cabana.id %>"><i class=" fa-solid fa-trash"></i></a>
    </div>
    <% } %>
  </div>

</li>
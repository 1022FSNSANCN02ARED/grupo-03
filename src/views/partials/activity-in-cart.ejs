<li class="border-solid m-1rem p-1rem flexhiden bg-6 border-rad">
  <div class="img-in-cart">
    <img class="w-100 border-rad5" src="<%=activity.images[0].image%>">
  </div>
  <div class="item-details m-10 fc-37">
    <h3 class="m-10"><%= activity.name%></h3>
    <p>Precio por persona: <b>$<%=activity.price%></b></p>
    <p>Para el d√≠a: <b><%=dataActInCart.day%></b></p>
    <p>Horario: <b><%=dataActInCart.hour%></b></p>
    <p>Cantidad participantes: <b><%=dataActInCart.quantity%></b></p>
    <p class="m-10">TOTAL: $<b class="total_cost"><%=dataActInCart.total_cost%></b></p>
  </div>
  <div class="item-remove ">
    <form action="/products/cart/delete/activity/<%=dataActInCart.sessionId%>?_method=delete" method="delete">
      <button class="border-rad5">Quitar</button>
    </form>
    <form action="/products/cart/edit/activity/<%=dataActInCart.sessionId%>" method="get">
      <button class="border-rad5">Editar</button>
    </form>
  </div>
</li>